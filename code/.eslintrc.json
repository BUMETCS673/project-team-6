{
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "depth": 3,
        "labelComponents": [],
        "labelAttributes": ["label"],
        "controlComponents": ["input"],
        "assert": "either",
        "required": {
          "some": ["nesting", "id"]
        }
      }
    ]
  }
}
